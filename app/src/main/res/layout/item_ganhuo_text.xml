<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_title"
        style="@style/ListItem.Title"
        android:layout_marginBottom="10dp"
        tools:text="基于material design support的开源学习项目(Github)" />

    <TextView
        android:id="@+id/tv_people"
        style="@style/ListItem.Source"
        android:layout_below="@+id/tv_title"
        tools:text="via SOLID" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/ListItem.Time"
        android:layout_alignBaseline="@+id/tv_people"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="3dp"
        tools:text="2016-04-18" />
</RelativeLayout>
